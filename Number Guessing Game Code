import random

print("Welcome to Number Game")
print("I am thinking of a number between 1 and 100.")

secret_number = random.randint(1, 100)
attempts = 0

while True:
    guess_raw = input("Enter a whole number 1 to 100, or type QUIT: ")

    #imput check
    if guess_raw.strip().lower() == "quit":
        print(f"You quit. The secret number was {secret_number}.")
        break

    #check of user input
    try:
        guess = int(guess_raw)
    except ValueError:
        print("Please enter a valid whole number between 1 and 100.")
        continue

    #makes sure that the guess is in the range
    if not 1 <= guess <= 100:
        print("Please enter a number between 1 and 100.")
        continue

    attempts += 1

    if guess == secret_number:
        if attempts == 1:
            print("Are you cheating? You guessed the correct number on your first try!")
        else:
            print(f"You have guessed the secret number in {attempts} attempts.")
        break
    elif guess < secret_number:
        print("Your guess is too low.")
    else:  # guess > secret_number
        print("Your guess is too high.")
